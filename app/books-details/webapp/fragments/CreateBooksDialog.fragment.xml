<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateBooksDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Create Book"
    >
        <beginButton>
            <Button
                id="idCreateButton"
                text="Create"
                press="onCreateBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idBooksDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idFirstNameLabel"
                    text="First Name"
                />
                <Input
                    id="idFirstNameInput"
                    value=""
                />
                <Label
                    id="idLastNameLabel"
                    text="Last Name"
                />
                <Input
                    id="idLastNameInput"
                    
                    value=""
                />
                <Label
                    id="idGenderLabel"
                    text="Gender"
                />
                <Input
                    id="idGenderInput"
                    value=""
                />
                <Label
                    id="idDOBLabel"
                    text="DOB"
                />
                <Input
                    id="idDOBInput"
                    value=""
                />
                <Label
                    id="idContractStartedLabel"
                    text="Contract Started"
                />
                <Input
                    id="idContractStartedInput"
                    value=""
                />
                <Label
                    id="idEmailLabel"
                    text="Email"
                />
                <Input
                    id="idEmailInput"
                    value=""
                />
                <Label
                    id="idPhoneNumberLabel"
                    text="Phone Number"
                />
                <Input
                    id="idPhoneNumberInput"
                    value=""
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>