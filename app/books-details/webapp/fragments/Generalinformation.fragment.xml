    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <form:SimpleForm id="_IDGenSimpleForm1" >

                    <Label
                                    id="idNameLabel"
                                    text="Author Name"
                                />
                                <Text
                                    id="idNameText"
                                    text="{author}"
                                />
                                <Label
                                    id="idTitleLabel"
                                    text="Title"
                                />
                                <Text
                                    id="idTitleText"
                                    text="{title}"
                                />
                                <Label
                                    id="idStockLabel"
                                    text="Stock"
                                />
                                <Text
                                    id="idPhoneText"
                                    text="{stock}"
                                />
                                </form:SimpleForm>

</core:FragmentDefinition>